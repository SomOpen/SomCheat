---
import BasicLayout from "../Layouts/BasicLayout.astro";
import { HomeIcon2 } from "../ReactComponent/icons/Section_Icons";
---

<BasicLayout title="Page Not Found">
  <main class="w-full flex justify-center items-center flex-col gap-5">
    <div class="flex justify-center items-center flex-col">
      <h1>404</h1>
      <h2 class="italic text-[1.2rem] font-medium text-pink-400">
        Page Not Found.
      </h2>
    </div>
    <p class="italic text-slate-500">
      Sorry, we can't find the page you are looking for.
    </p>
    <a
      class="py-2 px-4 bg-indigo-500 border-2 border-slate-300 rounded-full text-slate-100 flex gap-2 justify-center items-center"
      href="/"><HomeIcon2 /> Back to home</a
    >
    <div id="cheatsheet-message" class="mt-4"></div>
  </main>
</BasicLayout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const messageContainer = document.getElementById("cheatsheet-message");
    const pathname = window.location.pathname;

    if (messageContainer && pathname.includes("/cheatsheets/")) {
      const cheatName = decodeURIComponent(pathname.split("/").pop() || "");
      messageContainer.innerHTML = `
  <p>Cheatsheet "<strong>${cheatName}</strong>" not found.  
  <a href="https://github.com/Adam-Elmi/SomCheat" target="_blank" class="text-blue-500 underline">Contribute</a> or  
  <a href="https://github.com/Adam-Elmi/SomCheat/issues" target="_blank" class="text-blue-500 underline">Request</a>.</p>
`;
    } else {
      messageContainer.style.display = "none";
    }
  });
</script>

<style>
  main {
    background-color: #ffffff;
    background-image: url("data:image/svg+xml,%3Csvg width='64' height='64' viewBox='0 0 64 64' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 16c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm0-2c3.314 0 6-2.686 6-6s-2.686-6-6-6-6 2.686-6 6 2.686 6 6 6zm33.414-6l5.95-5.95L45.95.636 40 6.586 34.05.636 32.636 2.05 38.586 8l-5.95 5.95 1.414 1.414L40 9.414l5.95 5.95 1.414-1.414L41.414 8zM40 48c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm0-2c3.314 0 6-2.686 6-6s-2.686-6-6-6-6 2.686-6 6 2.686 6 6 6zM9.414 40l5.95-5.95-1.414-1.414L8 38.586l-5.95-5.95L.636 34.05 6.586 40l-5.95 5.95 1.414 1.414L8 41.414l5.95 5.95 1.414-1.414L9.414 40z' fill='%239C92AC' fill-opacity='0.08' fill-rule='evenodd'/%3E%3C/svg%3E");
  }
  h1 {
    font-family: "Grand Hotel";
    font-size: 6rem;
    color: #aaa;
  }
  #cheatsheet-message {
    background: linear-gradient(135deg, #f0f0f0, #ffffff);
    border: 1px solid #e0e0e0;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1rem;
    max-width: 500px;
    text-align: center;
    color: #333;
    font-size: 1rem;
    line-height: 1.5;
    animation: fadeIn 0.3s ease-in-out;
  }

  #cheatsheet-message a {
    color: #4f46e5;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
  }

  #cheatsheet-message a:hover {
    color: #3730a3;
    text-decoration: underline;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
